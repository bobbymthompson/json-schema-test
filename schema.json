{
    "$id": "https://raw.githubusercontent.com/striker8118/json-schema-test/master/schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "$ref": "translations.json#/definitions/translations"
      },
      "description": {
        "$ref": "translations.json#/definitions/translations"
      },
      "dependencies": {
        "items": {
          "$ref": "#/definitions/dependency"
        }
      },
      "configuration": {
        "type": "object",
        "description": "The json schema of the property"
      }
    },
    "definitions": {
      "pullFromType": {
        "title": "Type",
        "description": "Where to pull the configuration data from (e.g. constant value or property).",
        "type": "string",
        "enum": ["constant", "property"]
      },
      "dependency": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the attribute"
          },
          "schema": {
            "description": "The json schema of the property"
          }
        }
      },
      "configuration": {
        "type": "object",
        "required": ["name", "schema"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the property"
          },
          "schema": {
            "description": "The json schema of the property"
          }
        }
      }
    }
  }
  